<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true do %>
    <i class="fa-solid fa-heart margin-r10"></i>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="fa-regular fa-heart margin-r10"></i>
  <% end %>
<% end %>
<% unless post.likes.count == 0 %>
  <div class="likes-count">
    <%= post.likes.count %>
    <ul class="likes-lists b">
      <% post.liked_users.each do |user| %>
        <li><%= link_to user.name, user_path(user) %></li>
      <% end %>
    </ul>
  </div>
<% end %>