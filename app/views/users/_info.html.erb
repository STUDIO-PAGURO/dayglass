<div class="user-upper-content">
  <div class="user-area2">
    <div class="user-icon2">
      <% if user.icon.attached? %>
        <%= image_tag user.icon, class: "icon2" %>
      <% else %>
        <%= image_tag "default_user.png", class: "icon2" %>
      <% end %>
    </div>
    <div class="user2">
      <div class="user-name2 b">
        <%= link_to user.name, user_path(user.id) %>
      </div>
      <div class="user-account">
        <%= user.account %>
      </div>
      <div class="follow-counts">
        <div class="follow-count">
          <% if followings.count == 0 %>
            <%= "#{followings.count} フォロー中" %>
          <% else %>
            <%= link_to "#{followings.count} フォロー中", users_following_path(user) %>
          <% end %>
        </div> 
        <div class="follower-count">
          <% if followers.count == 0 %>
            <%= "#{followers.count} フォロワー" %>
          <% else %>
            <%= link_to "#{followers.count} フォロワー", users_follower_path(user) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% if current_user != user %>
    <div id="follow_form">
      <%= render partial: "relationships/follow", locals: { user: user } %>
    </div>
  <% else %>
    <div class="logout">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    </div>
  <% end %>
</div>
<div class="user-profile">
    <%= @user.profile %>
</div>