<div class="main-contents">
  <div class="time-line">
    <div class="contents">
      <div class="user-info">
        <div class="user-upper-content">
          <div class="user-area2">
            <div class="user-icon2">
              ◎
            </div>
            <div class="user2">
              <span class="user-name2">
                <%= link_to @user.name, user_path(@user.id) %>
              </span>
              <p class="user-account"><%= @user.account %></p>
              <p class="follow-count">88フォロー中 92フォロワー<p>
            </div>
          </div>
          <% if user_signed_in? && current_user.id != @user.id %>
            <div class="follow-btn">
                フォロー
            </div>
          <% end %>
        </div>
        <div class="user-profile">
            <%= @profile %>
        </div>
      </div>
      <% @posts.each do |post| %>
        <%= render partial: "posts/post", locals: { post: post } %>
      <% end %>
    </div>
    <div class="recommendation">
      <div class="recommendation-users">
      </div>
      <div class="mini-footer">
        ©2022 STUDIO PAGURO
      </div>
    </div>
  </div>
</div>