<div class="main-contents">
  <div class="time-line">
    <div class="contents">
      <% if @timeline.blank? %>
        <h4 class="title">フォロー中または自分の24時間以内の投稿はありません。</h4>
      <% else %>
        <% @timeline.each do |post| %>
          <%= render partial: "post", locals: { post: post } %>
        <% end %>
      <% end %>
    </div>
    <div class="recommendation">
      <%= render partial: "recommendation", locals: { recommendation_users: @recommendation_users } %>
    </div>
  </div>
</div>