<div class="main-contents">
  <div class="edit-page">
    <div class="post-form">
      <h4 class="title">編集する</h3>
      <%= form_with(model: @post, local: true) do |form| %>
        <%= form.text_area :text, placeholder: "投稿する…", rows: "10", class: "text-field" %>
        <%= form.submit "投稿", class: "send-btn" %>
      <% end %>
    </div>
  </div>
</div>