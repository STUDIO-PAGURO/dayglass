<div class="main-contents">
  <div class="time-line">
    <div class="detailed-content">
      <div class="upper-content">
        <div class="user-area">
          <div class="user-icon2">
            <% if @post.user.icon.attached? %>
              <%= image_tag @post.user.icon, class: "icon" %>
            <% else %>
              <%= image_tag "default_user.png", class: "icon" %>
            <% end %>
          </div>
          <div class="user">
            <span class="user-name">
              <%= link_to @post.user.name, user_path(@post.user.id) %>
            </span>
            <div class="limit-time">
              <%= time_ago_in_words(@post.created_at) %>
            </div>
          </div>
        </div>
        <div class="more">
          <i class="uil uil-ellipsis-h"></i>
          <ul class="more_list">
            <% if user_signed_in? && current_user.id == @post.user_id %>
              <li>
                <%= link_to '編集', edit_post_path(@post.id), method: :get %>
              </li>
              <li>
                <%= link_to '削除', post_path(@post.id), method: :delete, data: { confirm: "削除しますか？" } %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="detailed-content_post">
        <p><%= @post.text %></p>
        <div class="post-image-field">
          <%= image_tag @post.image.variant(resize: "1000x720"), class: "post-image" if @post.image.attached? %>
        </div>
      </div>
      <div class="reaction">
        <% if user_signed_in? %>
          <div class="reaction-btn">
            <div class="heart">
              ♡
            </div>
            <div class="comment2">
              ∂
            </div>
            <div class="daygrass">
              X
            </div>
          </div>
          <div class="comment-form-area">
            <%= form_with(model: [@post, @comment], class: "form", local: true) do |form| %>
              <%= form.text_area :text, placeholder: "コメントする", rows: "1", class: "comment-form" %>
              <%= form.submit "投稿する", class: "btn" %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="comments">
        <% @comments.each do |comment| %>
          <div class="comment-area">
            <div class="user-icon">
              <% if comment.user.icon.attached? %>
                <%= image_tag comment.user.icon, class: "icon" %>
              <% else %>
                <%= image_tag "default_user.png", class: "icon" %>
              <% end %>
            </div>
            <div class="comment">
              <p><span><%= link_to comment.user.name, user_path(comment.user_id) %></span>  - - - <%= time_ago_in_words(comment.created_at) %></p>
              <%= comment.text %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>